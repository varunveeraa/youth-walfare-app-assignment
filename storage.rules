rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      // Allow users to read and write their own profile pictures
      allow read, write: if isAuthenticated() && isOwner(userId);
      // Allow all authenticated users to read profile pictures
      allow read: if isAuthenticated();
    }
    
    // Resource images
    match /resource-images/{allPaths=**} {
      // Allow all authenticated users to read resource images
      allow read: if isAuthenticated();
      // Allow admins and counsellors to upload resource images
      allow write: if isAuthenticated();
    }
    
    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
